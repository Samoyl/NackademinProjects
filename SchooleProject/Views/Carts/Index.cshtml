@model SchooleProject.Models.Cart
@{
    ViewData["Title"] = "Index";
}
<h2>Your Cart Item</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label for="Name">Name</label>
            </th>
            <th>
                <label for="Price">Price</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Dishes != null)
        {
            @foreach (var item in Model.Dishes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-controller="Carts" asp-action="Edit" asp-route-id="@item.DishId">Edit</a> |
                        <a asp-controller="Carts" asp-action="Details" asp-route-id="@item.DishId">Details</a> |
                        <a asp-controller="Carts" asp-action="Delete" asp-route-id="@item.DishId">Delete</a>
                    </td>
                </tr>
            }  
        }
    </tbody>
</table>
